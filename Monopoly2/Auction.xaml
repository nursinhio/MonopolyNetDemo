<Window x:Class="Monopoly2.Auction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monopoly2"
        mc:Ignorable="d"
        Title="Auction" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Current Bid:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,29,0,0"/>
        <TextBlock x:Name="CurrentBidTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,29,0,0"/>
        <TextBlock Text="Your Bid:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox x:Name="BidTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,50,0,0" Width="100"/>
        <Button x:Name="BidButton" Content="Bid" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" Click="BidButton_Click"/>
        <Button x:Name="PassButton" Content="Pass" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,90,0,0" Click="PassButton_Click"/>
        <TextBlock Text="Current Player:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBlock x:Name="CurrentPlayer" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,10,0,0"/>
    </Grid>
</Window>
